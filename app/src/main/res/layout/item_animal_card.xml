<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:id="@+id/itemAnimalCard_cardView"

        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/itemAnimalCard_ImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/chien1"></ImageView>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/AnimalCardIItem_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        />


    <TextView
        android:id="@+id/AnimalCardItem_Title"
        style="@style/StyleTextSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginBottom="28dp"
        android:text="Mon Super Chien Chien"
        app:layout_constraintBottom_toTopOf="@+id/AnimalCardIItem_view"
        app:layout_constraintStart_toEndOf="@+id/itemAnimalCard_cardView" />

    <TextView
        android:id="@+id/AnimalCardItem_Description"
        style="@style/StyleTextDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Ma super Description"
        app:layout_constraintStart_toStartOf="@+id/AnimalCardItem_Title"
        app:layout_constraintTop_toBottomOf="@+id/AnimalCardIItem_view"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>